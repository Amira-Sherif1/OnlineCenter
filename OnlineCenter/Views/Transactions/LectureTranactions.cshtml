@using Models
@model List<PaymentTransaction>
@{
    Layout = "~/Views/Shared/DashLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Add Course Button -->
    @* <div class="mb-4">
        <a href="@Url.Action("Create", "Course")" class="btn btn-primary">Add Course</a>
    </div>
 *@
    <div class="card">
        <h5 class="card-header">All Payment Transactions</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Lecture</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Amount</th>

                        
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Lecture.Title</strong></td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td><span class="badge bg-label-primary me-1">@item.Amount</span></td>
                            <td><strong>@item.Status</strong></td>

                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

