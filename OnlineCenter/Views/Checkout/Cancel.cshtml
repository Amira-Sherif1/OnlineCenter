<!-- Views/Checkout/Cancel.cshtml -->
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="payment-header">
    <h1 class="payment-title">PAYMENT CANCELLED</h1>
    <nav class="breadcrumb">
        <a href="/" class="text-white">HOME</a>
        <span class="mx-2 text-white">»</span>
        <span class="text-white">PAYMENT CANCELLED</span>
    </nav>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <div class="cancel-icon mb-4">
                        <i class="fas fa-times-circle text-danger fa-5x"></i>
                    </div>
                    <h2 class="card-title mb-4">Payment Cancelled</h2>
                    <p class="card-text mb-4">
                        Your payment was cancelled. If you'd like to try again, please click the button below.
                    </p>
                    <div class="buttons">
                        <a href="javascript:history.back()" class="btn btn-primary">
                            Try Again
                        </a>
                        <a href="/Home/Index" class="btn btn-outline-primary ml-3">
                            Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

