@model Models.Subject

@{
    ViewData["Title"] = "EditSubject";
    Layout = "~/Views/Shared/DashLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Add a back arrow link -->
        <div class="mb-4">
            <a href="@Url.Action("AllSubjects", "Subject")" class="btn btn-link">
                <i class="bx bx-arrow-back me-2"></i> Back to Subjects
            </a>
        </div>

        <!-- Card Layout for Adding Subject -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Add New Subject</h5>
                    </div>
                    <div class="card-body">
                            <form asp-action="EditSubject">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            
                                <div class="form-group mt-3">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}