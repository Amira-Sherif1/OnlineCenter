@using Models
@model List<Course>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container-fluid page-header" style="margin-bottom: 90px;">
    <div class="container">
        <div class="d-flex flex-column justify-content-center" style="min-height: 300px">
            <h3 class="display-4 text-white text-uppercase">Courses</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="/Home/Index">Home</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">Courses</p>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Courses</h5>
            <h1>Explore Top Courses</h1>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {

                
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="rounded overflow-hidden mb-2">
                            <img class="img-fluid" src="~/MainLayout/img/course.jpg" alt="">
                            <div class="bg-secondary p-4">
                                <div class="d-flex justify-content-between mb-3">
                                    <small class="m-0"><i class="fa fa-users text-primary mr-2"></i>@item.Lectures.Count() Lecture</small>
                                </div>
                                <a class="h5" href="/UserLectures/AllLectures?CourseId=@item.Id">@item.Name</a>
                                <div class="border-top mt-4 pt-4">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="m-0"><i class="fa fa-star text-primary mr-2"></i></h6>
                                        <h5 class="m-0"> </h5> <!-- instructor name -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                
               

            }

        </div>
    </div>
</div>

