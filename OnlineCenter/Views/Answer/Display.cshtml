@model Models.Answer

<div class="row mb-3">
    <div class="col-6">
        <h2>View Answer Document</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h4>Answer Document</h4>

        <!-- Display the PDF document -->
        <div class="mb-3">
            <object data="@Url.Content("~/Document/" + Model.AnswerDoc)" type="application/pdf" width="100%" height="600px">
                <p>Your browser does not support inline PDF viewing. You can <a href="@Url.Content("~/Document/" + Model.AnswerDoc)">download the PDF</a> instead.</p>
            </object>
        </div>

    </div>
</div>

<div class="col-6 mt-3">
    <button type="button" class="btn btn-danger" onclick="window.location.href='/Answer/Index'">Back to Answers</button>
</div>
