@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="bg-secondary rounded p-5">
                <h3 class="text-uppercase mb-4" style="letter-spacing: 5px;">Create a new account</h3>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Input.Email">Email *</label>
                        <input asp-for="Input.Email" class="form-control border-0" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.Password">Password *</label>
                        <input asp-for="Input.Password" class="form-control border-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.ConfirmPassword">Confirm Password *</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control border-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.Address">Address *</label>
                        <input asp-for="Input.Address" class="form-control border-0" autocomplete="address" aria-required="true" placeholder="Your address" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.GradeId">Grade *</label>
                        <select asp-for="Input.GradeId" class="form-control border-0" aria-required="true">
                            <option value="">Select a grade</option>
                            @foreach (var grade in Model.Input.grades)
                            {
                                <option value="@grade.Id">@grade.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Input.GradeId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <button id="registerSubmit" type="submit" class="btn btn-primary py-md-2 px-md-4 font-weight-semi-bold">Register</button>
                    </div>
                </form>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="mt-4">
                        <h4 class="text-uppercase mb-3" style="letter-spacing: 3px;">Or Register With</h4>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-primary py-md-2 px-md-4 font-weight-semi-bold me-2" 
                                        name="provider" value="@provider.Name" 
                                        title="Register using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

